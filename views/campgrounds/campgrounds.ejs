<% layout("layouts/boilerplate") -%> 
    <h1>Campgrounds</h1>

    <h4><a href="/campgrounds/new">Add new campground</a></h4>

    <ul>

        <% for(let camp of campgrounds) { %>
                
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.image %> " class="img-fluid" alt="">

                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <%= camp.title %> 
                        </h5>
                        <p class="card-text">
                            <%= camp.description %> 
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %> 
                            </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"> view <%= camp.title %> </a>
                    </div>
                </div>

            </div>

            <% } %> 
    </ul>
