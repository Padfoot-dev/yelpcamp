<% layout("layouts/boilerplate") -%> 
 
<div class="row">

    <div class="text-center">
        <h1>Add new campground</h1>
    </div>
    <div class="col-6 offset-3">
        
        <form action="/campgrounds" method="post">

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campgrounds[title]" id="title">
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">location</label>
                <input class="form-control" type="text" name="campgrounds[location]" id="location">
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="Price" name="campgrounds[price]" id="price">
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campgrounds[image]" id="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campgrounds[description]" id="description"> </textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>

        </form>
        
    <h4><a href="/campgrounds"> Back to all campgroundsS</a></h4>
    </div>

</div>

